<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch17.homework0418.RootController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView fx:id="imageTitle" fitHeight="80.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
               <image>
                  <Image url="@images/kbo.jpg" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <HBox>
         <children>
            <ListView fx:id="listView" prefHeight="240.0" prefWidth="240.0" />
            <TableView fx:id="tableView" prefHeight="240.0" prefWidth="200.0">
              <columns>
                <TableColumn prefWidth="99.0" text="선수명" />
                <TableColumn prefWidth="99.0" text="타율" />
              </columns>
            </TableView>
         </children>
      </HBox>
      <Button fx:id="btnClose" alignment="CENTER" mnemonicParsing="false" text="닫기">
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
